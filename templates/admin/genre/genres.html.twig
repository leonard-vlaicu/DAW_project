{% extends 'admin/index.html.twig' %}

{% block title %}Genres{% endblock %}

{% block manage_content %}
    {% for error in app.flashes('error') %}
        <div class="alert alert-error alert-soft mb-10">{{ error }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-soft mb-10">{{ message }}</div>
    {% endfor %}

    <h1 class="text-2xl mb-5">Genres</h1>

    <a class="" href="{{ path('app_admin_genres_add') }}">
        <button class="btn btn-primary">Add new genre</button>
    </a>

    <div class="mt-5 rounded-box border border-base-content/5 bg-base-200">
        <table class="table">
            <!-- head -->
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            {% for genre in genres %}
                <tr class="hover:bg-base-100 transition duration-200 ease-in-out">
                    <th>{{ genre.id }}</th>
                    <th>{{ genre.name }}</th>
                    <th>
                        <a href="{{ path('app_admin_genres_edit', {'id': genre.id}) }}">
                            <button class="btn btn-secondary">Edit</button>
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('app_admin_genres_delete', {'id': genre.id}) }}">
                            <button class="btn btn-error">Delete</button>
                        </a>
                    </th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}




