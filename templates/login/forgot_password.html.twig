{% extends 'base.html.twig' %}

{% block title %}Forgot your password?{% endblock %}

{% block body %}

    <div class="mt-20">
        <div class="flex flex-col items-center justify-center align-middle h-full">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-soft mb-10" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            <h1 class="text-2xl mb-3 font-bold">Reset your password</h1>
            <p class="text-gray-300 mb-10">Enter your email address and weâ€™ll send you a link to reset your password</p>

            {{ form_start(forgottenPasswordForm) }}

            <label class="input validator">
                {{ form_widget(forgottenPasswordForm.email,
                    {'attr': {'placeholder': 'Enter your email'}}) }}
            </label>
            <div class="text-error">
                {{ form_errors(forgottenPasswordForm.email) }}
            </div>

            <div class="mt-5">
                <button class="btn btn-primary">Reset password</button>
            </div>

            {{ form_end(forgottenPasswordForm) }}
        </div>
    </div>

{% endblock %}

