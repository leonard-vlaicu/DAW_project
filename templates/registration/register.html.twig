{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="mt-20">
        <div class="flex flex-col items-center justify-center align-middle h-full">
            {% for error in app.flashes('verify_email_error') %}
                <div class="alert alert-error alert-soft mb-10">{{ error }}</div>
            {% endfor %}

            <h1 class="text-2xl mb-3 font-bold">Register</h1>

            {{ form_start(registrationForm) }}

            <label class="input">
                {{ form_widget(registrationForm.email.first,
                    {'attr': {'placeholder': 'Enter your email'}}) }}
            </label>
            <label class="input mt-2">
                {{ form_widget(registrationForm.email.second,
                    {'attr': {'placeholder': 'Confirm your email'}}) }}
            </label>
            <div class="text-error">
                {{ form_errors(registrationForm.email.first) }}
            </div>

            <label class="input mt-8">
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Enter your password'}}) }}
            </label>
            <label class="input mt-2">
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'placeholder': 'Confirm your password'}}) }}
            </label>
            <div class="text-error">
                {{ form_errors(registrationForm.plainPassword.first) }}
            </div>

            <div class="form-control mt-4">
                <label class="label cursor-pointer justify-start gap-2">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <span class="label-text">{{ form_label(registrationForm.agreeTerms) }}</span>
                </label>
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div class="mt-5">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>

            <p class="mt-4">Already have an account?
                <a class="text-accent" href="{{ path('app_login') }}">Click here to login</a>
            </p>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
